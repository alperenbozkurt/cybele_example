.card
  .card-header
    %i.icon-edit.icon-large
    = yield :form_title
  .card-body
    = simple_form_for([:user, profile], url: user_profile_path) do |f|
      = f.error_notification

      .form-inputs
        = f.input :name
        = f.input :surname

      .form-actions
        = f.button :submit, class: 'btn btn-primary'
        = link_to t('view.cancel'), user_profile_path, class: 'btn'
